{
  "compilerOptions": {
    "target": "es2016",
    "module": "esnext",
    "rootDir": ".",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true
  },
  "include": ["src/**/*", "types"],
  "exclude": ["node_modules"]
}
